<%if(status === "Error") { %>
<div class="alert alert-danger" role="alert"><%=statusDescription%></div>
<% } else { %>
<img src="<%=user.imageUrl%>" alt="<%=user.firstName%> <%=user.lastName%>" class="img-circle" width="200px" height="auto">
<form role="form"action="/user" method="post">
    <!-- This line below is to support PUT HTTP method. Works only in Express JS Server. It's cool-->
    
    <input type="hidden" name="_method" value="put">
    
  <div class="form-group">
    <label for="txtUserName">User name</label>
    <input type="text" class="form-control" name="userName" id="txtUserName" placeholder="User name" value="<%=user.userName%>">
  </div>
  <div class="form-group">
    <label for="txtFirstName">First Name</label>
    <input type="text" class="form-control" name="firstName" id="txtFirstName" placeholder="First name" value="<%=user.firstName%>">
  </div>
  <div class="form-group">
    <label for="txtLastName">Last Name</label>
    <input type="text" class="form-control" name="lastName" id="txtLastName" placeholder="Last name" value="<%=user.lastName%>">
  </div>
  <div class="form-group">
    <label for="txtProfileImageUrl">Profile Image URL</label>
    <input type="text" class="form-control" name="imageUrl" id="txtProfileImageUrl" placeholder="Profile Image URL" value="<%=user.imageUrl%>">
  </div>
  <div class="radio-inline">
      <label> Role</label>
      <p></p>
        <input type="radio" name="role" value="Admin"<%if(user.role == "Admin"){%> checked<%}%>> Admin <div class="text-muted">with administrative permissions.</div>
        <input type="radio" name="role" value="User"<%if(user.role == "User"){%> checked<%}%>> User <div class="text-muted">who has no admin permissions.</div>
  </div>
      <p></p>
    
  <button type="submit" class="btn btn-default">Submit</button>
</form><% } %>