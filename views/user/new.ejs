<form role="form" action="/user/create" method="post">
  <div class="form-group">
    <label for="txtUserName">User name</label>
    <input type="text" class="form-control" name="userName" id="txtUserName" placeholder="User name">
  </div>
  <div class="form-group">
    <label for="txtFirstName">First Name</label>
    <input type="text" class="form-control" name="firstName" id="txtFirstName" placeholder="First name">
  </div>
  <div class="form-group">
    <label for="txtLastName">Last Name</label>
    <input type="text" class="form-control" name="lastName" id="txtLastName" placeholder="Last name">
  </div>
  <div class="form-group">
    <label for="txtProfileImageUrl">Profile Image URL</label>
    <input type="text" class="form-control" name="imageUrl" id="txtProfileImageUrl" placeholder="Profile Image URL">
  </div>
  <div class="radio-inline">
      <label> Role</label>
      <p></p>
        <input type="radio" name="role" value="Admin"> Admin <div class="text-muted">with administrative permissions.</div>
        <input type="radio" name="role" value="User"> User <div class="text-muted">who has no admin permissions.</div>
  </div>
      <p></p>
    
  <button type="submit" class="btn btn-default">Submit</button>
</form>